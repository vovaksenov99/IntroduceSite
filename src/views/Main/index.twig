{% extends '../layout.twig' %}

{% block content %}
    <div class="profile-card">
        <div class="profile-info">

            <div>
                <div class="view overlay hm-white-slight profile-image-container">
                    <img src="public/myResource/myImage/my_photo.jpg" class="img-flex profile-photo">
                    <a href="https://stackexchange.com/users/9552681" style="bottom: 0;position: absolute;">
                        <img src="https://stackexchange.com/users/flair/9552681.png?theme=clean"
                             alt="profile for Аксенов Владимир on Stack Exchange, a network of free, community-driven Q&amp;A sites"
                             title="profile for Аксенов Владимир on Stack Exchange, a network of free, community-driven Q&amp;A sites">
                    </a>
                </div>

                <div class="card-body text-center">
                    <h3 class="card-title"><strong>
                            {{ res.myFullName }}
                            <script>document.write(" (" + Math.floor((Date.now() - Date.parse('1999-03-24')) / 1000 / 60 / 60 / 24 / 365) + " y.o)")
                            </script>
                        </strong></h3>
                    <h4>{{ res.developer }}</h4>
                    <p class="card-text" style="font-size: 1.2em">
                        {{ res.myDescribe }}
                    </p>
                </div>
                <div class="media mb-1" style="padding-left: 20px;">
                    <div class="media-body">
                        <h4 class="education-block-title">{{ res.education }}</h4>
                        <ul style="display: flex;flex-flow: row wrap;list-style: none;padding: 0;">
                            {% for education in res.educationList %}
                                <a class="card education-block" style="margin: 8px;cursor: pointer"
                                   href="{{ education.link }}" target="_blank">
                                    <div class="card-body">
                                        <div style="display: flex;align-items: center;">
                                            <img src="{{ education.icon }}"
                                                 style="height: auto;width: 70px"/>
                                            <h5 class="card-title" style="margin-left: 16px">{{ education.name }}</h5>
                                        </div>
                                        <p class="card-text" style="margin-top: 12px">{{ education.description }}</p>
                                    </div>
                                </a>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">{{ res.technologyStack }}</h4>
                        <p>
                            {% include './badges.twig' %}
                            <br>
                        </p>
                    </div>
                </div>
            </div>
            <div class="skills-list skill-description">
                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">Kotlin</h4>
                        <ul class="star-rating" style="padding: 0px">
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                        </ul>

                        <p>{{ res.projects }}:
                            {% for project in res.kotlinDescribeStack %}
                                <a
                                href="{{ project.link }}">{{ project.name }}</a>{% if project != res.kotlinDescribeStack|last %},&nbsp;{% endif %}
                            {% endfor %}
                        </p>
                    </div>
                </div>

                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">Java</h4>
                        <ul class="star-rating" style="padding: 0px">
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>
                        <p>{{ res.projects }}:
                            {% for project in res.javaDescribeStack %}
                                <a
                                href="{{ project.link }}">{{ project.name }}</a>{% if project != res.javaDescribeStack|last %},&nbsp;{% endif %}
                            {% endfor %}
                        </p>
                    </div>
                </div>


                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">HTML,CSS, JavaScript, TypeScript</h4>
                        <ul class="star-rating" style="padding: 0px">
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>
                        <p>{{ res.projects }}:
                            {% for project in res.webDescribeStack %}
                                <a
                                        href="{{ project.link }}">{{ project.name }}</a>,&nbsp;
                            {% endfor %}
                            {% for project in res.javascriptDescribeStack %}
                                <a
                                href="{{ project.link }}">{{ project.name }}</a>{% if project != res.javascriptDescribeStack|last %},&nbsp;{% endif %}
                            {% endfor %}
                        </p>
                    </div>
                </div>

                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">C#</h4>
                        <ul class="star-rating" style="padding: 0px">
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>

                        <p>{{ res.projects }}:
                            {% for project in res.csharpDescribeStack %}
                                <a
                                href="{{ project.link }}">{{ project.name }}</a>{% if project != res.csharpDescribeStack|last %},&nbsp;{% endif %}
                            {% endfor %}
                        </p>
                    </div>
                </div>


                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">Python</h4>
                        <ul class="star-rating" style="padding: 0px">
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>
                        <p>{{ res.projects }}:
                            {% for project in res.pythonDescribeStack %}
                                <a
                                href="{{ project.link }}">{{ project.name }}</a>{% if project != res.pythonDescribeStack|last %},&nbsp;{% endif %}
                            {% endfor %}
                        </p>
                    </div>
                </div>


                <div class="media mb-1 skill">
                    <div class="media-body">
                        <h4 class="">C++</h4>
                        <ul class="star-rating" style="padding: 0px">
                            <li><i class="fa fa-star amber-text"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>
                        <p>{{ res.cppDescribeStack }}</p>
                    </div>
                </div>


            </div>
        </div>

        {% include './timeline.twig' with {res:res,timeline: timeline} %}

        <div style="display: inline-flex; margin-bottom: 15px">
            <img src="public/myResource/myImage/cup.svg" class="achievements-icon">
            <h3 style="padding-left: 10px; margin: 0px">{{ res.achievements }}</h3>
        </div>
        {% include './achievements.twig' with {res:res} %}

        <div style="display: inline-flex; margin-bottom: 15px">
            <img src="public/myResource/myImage/cup.svg" class="achievements-icon">
            <h3 style="padding-left: 10px; margin: 0px">{{ res.events }}</h3>
        </div>
        {% include './events.twig' with {res:res} %}
    </div>

    <script>
        frontendController.setNavBarTab('main');
    </script>

{% endblock %}