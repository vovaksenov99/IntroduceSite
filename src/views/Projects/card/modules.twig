{% block modules %}
    {% if modules %}

        <h2 class="{{ style.textColorClass }} font-weight-bold" style="margin-top: 15px;margin-bottom: 15px">
            {{ res.modules }}</h2>
    {% endif %}
    <div>

        {% for module in modules %}
            <h6 class="{{ style.textColorClass }} font-weight-bold" style="font-size: 1.3em">{{ module.name }}</h6>
            <p class="{{ style.textColorClass }}" style="font-size: 1em">{{ module.description }}</p>
            <a href="{{ module.more.link }}" class="d-flex flex-row-reverse">
                <h5 class="waves-effect waves-light p-2 {{ style.textColorClass }}">{{ module.more.text }}<i
                            class="fa fa-chevron-right" style="margin-left: 10px"></i></h5>
            </a>
        {% endfor %}
    </div>
{% endblock %}